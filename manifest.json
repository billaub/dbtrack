{
  "name": "dbtrack",
  "version": "1.0",
  "description": "Tired of forgetting songs you listened?",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action" :
  {
    "default_icon" : "icon.png",
    "default_title" : "dbtrack",
    "default_popup": "popup.html"
  },
  "permissions" : [
    "tabs",
    "storage"
  ],
  "manifest_version": 2
}
